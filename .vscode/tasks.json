{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": {
                "base": "$tsc-watch",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Compiling\\.\\.\\.$",
                    "endsPattern": "Waiting\\.\\.\\.$"
                }
            },
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}