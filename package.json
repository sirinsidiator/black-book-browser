{
    "name": "black-book-browser",
    "private": true,
    "version": "4.3.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "prepare": "svelte-kit sync",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint . && reuse lint",
        "format": "prettier --write .",
        "tauri": "tauri",
        "update-patrons": "node scripts/update-patrons.js",
        "actions": "act --artifact-server-path ./artifacts --env CACHE_BIN=false",
        "postinstall": "node scripts/ionicComponentTypesToSvelte.js",
        "posti": "npm run postinstall",
        "version": "node scripts/applyVersionToTauri.js"
    },
    "dependencies": {
        "@ionic/core": "^8.7.17",
        "@tauri-apps/api": "^2.10.1",
        "@tauri-apps/plugin-dialog": "^2.6.0",
        "@tauri-apps/plugin-fs": "^2.4.5",
        "@tauri-apps/plugin-opener": "^2.5.3",
        "fuzzysort": "^3.1.0",
        "highlight.js": "^11.11.1",
        "ionic-svelte": "^0.5.85",
        "ionicons": "^8.0.13",
        "picomatch": "^4.0.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@sveltejs/adapter-static": "^3.0.10",
        "@sveltejs/kit": "^2.50.2",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "@tauri-apps/cli": "^2.10.0",
        "@tsconfig/svelte": "^5.0.7",
        "@types/node": "^25.2.3",
        "@types/picomatch": "^4.0.2",
        "eslint": "^9.39.2",
        "eslint-plugin-svelte": "^3.15.0",
        "globals": "^17.3.0",
        "prettier": "^3.8.1",
        "prettier-plugin-svelte": "^3.4.1",
        "svelte": "^5.50.2",
        "svelte-check": "^4.3.6",
        "svelte-preprocess": "^6.0.3",
        "svelte-preprocess-import-assets": "^1.1.0",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.55.0",
        "vite": "^7.3.1"
    }
}
