{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:1420",
        "distDir": "../build",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "bbb",
        "version": "4.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "dialog": {
                "open": true
            },
            "fs": {
                "readDir": true,
                "readFile": true,
                "scope": [
                    "**"
                ]
            },
            "path": {
                "all": true
            }
        },
        "bundle": {
            "active": false,
            "targets": "all",
            "identifier": "at.insidi.black-book-browser",
            "publisher": "sirinsidiator",
            "copyright": "sirinsidiator",
            "category": "DeveloperTool",
            "shortDescription": "Black Book Browser - Elder Scrolls Online Game Archive Viewer",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": {
                "default-src": "'none'",
                "style-src": "'self'",
                "connect-src": "inflate: https://inflate.localhost read-partial-file: https://read-partial-file.localhost decompress: https://decompress.localhost"
            }
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Black Book Browser",
                "width": 1600,
                "height": 800
            }
        ]
    }
}